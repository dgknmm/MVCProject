@model ProductViewmodel

@* 
 ViewStart içerisinde tüm sayfalar Layoutu kullanmasına rağmen istediğimiz sayfada kullanmasına engel olmak için Layout değerine null atayabiliriz.
 Ya da farklı bir Layout sayfaası atayarak o Layout'u kullanmasını sağlayabiliriz.
@{
    Layout=null;
} 
*@

@{

    var popularClass = Model.Products.Count > 2 ? "popular" : "";

    var products = Model.Products;
}

    <div class="row">
        <div class="col-md-2">
            @* Kategoriler gelecek *@
            @await Component.InvokeAsync("Categories")
        </div>
        <div class="col-md-10">
            @* Ürünler gelecek *@

            @if (products.Count == 0)
            {
                @await Html.PartialAsync("_noproduct")
            }
            else
            {
                <div class="row">
                    @foreach (var product in products)
                    {
                        <div class="col-md-3">
                            @await Html.PartialAsync("_product",product)
                        </div>
                    }
                </div>
            }
        </div>
    </div>
